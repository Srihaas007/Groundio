# Development Dockerfile for hot reloading
FROM node:20-alpine

RUN apk add --no-cache git

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY web-app/package*.json ./web-app/

# Install dependencies
RUN npm install
RUN cd web-app && npm install

# Copy source code
COPY . .

# Expose ports
EXPOSE 8081
EXPOSE 3000

# Start development server
CMD ["npm", "start"]
